{% extends 'base.html.twig' %}

{% block title %}Realisation index{% endblock %}

{% block body %}
    <h1>Realisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Domaine</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>PieceJointe</th>
                <th>Flag</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisation in realisations %}
            <tr>
                <td>{{ realisation.id }}</td>
                <td>{{ realisation.titre }}</td>
                <td>{{ realisation.description }}</td>
                <td>{{ realisation.domaine }}</td>
                <td>{{ realisation.dateDebut ? realisation.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ realisation.dateFin ? realisation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ realisation.pieceJointe }}</td>
                <td>{{ realisation.flag ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('realisation_show', {'id': realisation.id}) }}">show</a>
                    <a href="{{ path('realisation_edit', {'id': realisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('realisation_new') }}">Create new</a>
{% endblock %}
